datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

model Post {
    id        String   @id @default(uuid())
    text      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
