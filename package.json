        "build": "next build",
        "dev": "next dev",
        "lint": "next lint",
        "start": "next start",
        "prisma:merge": "prisma-merge -b prisma/base.prisma -e **/schema.prisma -o prisma/schema.prisma -s src/**/*.prisma",
